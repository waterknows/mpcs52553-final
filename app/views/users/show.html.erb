<div class="tab-content">
	<div id="account" class="tab-pane fade in active">
			<div class="col-sm-12">
				<h3 style="text-align:center">Account Summary</h3>
				<ul class="list-group">
					<a href= <%= "/users/#{@user.id}/edit"  %> class="list-group-item">
						<h4 class="list-group-item-heading"> Username </h4>
						<p class="list-group-item-text"> <%= @user.name %> </p>
					</a>
					<a href= <%= "/users/#{@user.id}/edit"  %> class="list-group-item">
						<h4 class="list-group-item-heading"> Email </h4>
						<p class="list-group-item-text"> <%= @user.email %> </p>
					</a>

					<li href="#" class="list-group-item">
						<h4 class="list-group-item-heading"> Password </h4>
						<p class="list-group-item-text"> <%= @user.password  %> </p>
					</li>	

					<li href="#" class="list-group-item">
						<h4 class="list-group-item-heading"> Create Date </h4>
						<p class="list-group-item-text"> <%= @user.created_at %> </p>
					</li>					
				</ul>
				<%= form_tag("/users/#{@user.id}", style: "text-align:center", method: 'delete', data: { confirm: "Are you sure?" }) do  %>
					<%= submit_tag "Delete Account", class: 'btn btn-info'%>
				<% end %>
			</div>
		</div>

</div>