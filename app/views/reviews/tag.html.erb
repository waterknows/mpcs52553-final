<div class="tab-content">
	<div id="reviews" class="tab-pane fade in show active">
		<div class="col-sm-12">
			<ul class="nav nav-pills">
				<li><a href="/reviews"> Dashboard </a></li>
				<li><a href="/reviews/new"> New Data </a></li>
			</ul>
			<br>

			<div class="panel-info">
				<div class="panel-heading"  id="new_review_panel">
					<h3 class="panel-title"> Tag Data Using LDA </h3>
				</div>
				<div class="panel-body">
					<% if  @review.errors.full_messages.any? %>
						<ul class="bg-warning">
							<% @review.errors.full_messages.each do |msg| %>
								<li><%= msg %></li>
							<% end %>
						</ul>
					<% end %>
					<p> Topic Number: <%= @tag %> </p>
					<%= link_to "Back", "/reviews/#{@review.id}" %>
				</div>
			</div>
		</div>
	</div>
</div>