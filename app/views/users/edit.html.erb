<div class="page-header">
	<h1 style="color:#F58080"><%= "Welcome, #{@user.name}" %></h1>
</div>

<ul class="nav nav-tabs">
	<li><a href="/decks"> Your Decks </a></li>
	<li><a href="/groups"> Your Groups </a></li>
	<li class="active"><a href="/users"> Account </a></li>
</ul>

<div class="tab-content">
	<div id="account" class="tab-pane fade in active">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<h3 style="text-align:center">Summary <a href=<%= "/users/#{@user.id}/edit" %> class="glyphicon glyphicon-pencil" style="color:#F58080"> </a></h3>
				<%= form_tag("/users/#{@user.id}", method: 'patch', data: { confirm: "Are you sure you want to change your username? " }) do  %>
					<% if  @user.errors.full_messages.any? %>
						<ul class="bg-warning">
							<% @user.errors.full_messages.each do |msg| %>
								<li><%= msg %></li>
							<% end %>
						</ul>
					<% end %>
					<ul class="list-group">
						<a href="#" class="list-group-item">
							<h4 class="list-group-item-heading"> Username </h4>
							<%= text_field_tag :name, @user.name, class: 'form-control' %>
						</a>
						<li href="#" class="list-group-item">
							<h4 class="list-group-item-heading"> Email </h4>
							<p class="list-group-item-text"> <%= @user.email %> </p>
						</li>
						<a href = "/groups" class="list-group-item">
							<h4 class="list-group-item-heading"> Groups </h4>
							<p class="list-group-item-text">  </p>
						</a>
						<a href="/decks" class="list-group-item">
							<h4 class="list-group-item-heading"> Decks </h4>
							<p class="list-group-item-text">  </p>
						</a>
						<li href="#" class="list-group-item">
							<h4 class="list-group-item-heading"> User Since </h4>
							<p class="list-group-item-text"> <%= @user.created_at %> </p>
						</li>					
						<li href="#" class="list-group-item">
							<h4 class="list-group-item-heading"> Last Updated </h4>
							<p class="list-group-item-text"> <%= @user.updated_at %> </p>
						</li>
					</ul>
					<div style="text-align:center">
						<%= submit_tag "Save", class: 'btn btn-danger' %>
						<%= link_to "Cancel", "/users/#{@user.id}", class: 'btn btn-default' %>
					</div>
				<% end %>
			</div>
		</div>
	</div>

</div>